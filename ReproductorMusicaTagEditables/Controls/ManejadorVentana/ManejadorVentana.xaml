<UserControl x:Class="ReproductorMusicaTagEditables.Controls.ManejadorVentana.ManejadorVentana"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReproductorMusicaTagEditables.Controls.ManejadorVentana"
             x:Name="manejadorVentana">
    <Control.Resources>
        <ResourceDictionary Source="/Controls/ManejadorVentana/ManejadorVentanaTheme.xaml"/>
    </Control.Resources>

    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right">
        <Button Style="{StaticResource btnManejadorVentanaMinimizar}" 
                Tag="#BDFF58 " Cursor="Hand"
                Click="OnMinimizar"/>
        <Button Style="{StaticResource btnManejadorVentanaMaximizar}" 
                Tag="#F5FAB4"
                Click="OnMaximizar"/>
        <Button Style="{StaticResource btnManejadorVentanaCerrar}" 
                Tag="#FD7F7F"
                Click="OnCerrar"/>
    </StackPanel>
    
</UserControl>
